<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="Volume Calculator"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Balok"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_panjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="panjang"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_lebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lebar"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tinggi"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_Bhitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:textSize="15dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/tv_hasilbalok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Piramid"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_sisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sisi"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_tinggipiramid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

        <Button
            android:id="@+id/btn_piramidhitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:textSize="15dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/tv_hasilpiramid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Tabung"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <EditText
            android:id="@+id/et_jaritabung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jari - jari"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_tinggitabung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tinggi"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_hitungtabung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:textSize="15dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/tv_hasiltabung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="20dp"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>
</LinearLayout>